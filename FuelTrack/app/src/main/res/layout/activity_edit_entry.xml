<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bashir1.fueltrack.EditEntryActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:id="@+id/date_edit"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:hint="Date (yyyy-mm-dd)"
        android:clickable="true" />



    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/station_edit"
        android:hint="Station (Textual)"
        android:layout_below="@+id/date_edit"
        android:layout_alignParentStart="true"
        android:inputType="text" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/odometer_edit"
        android:hint="Odometer (KM)"
        android:layout_below="@+id/station_edit"
        android:layout_alignParentStart="true"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fuel_amount_edit"
        android:hint="Fuel Amount (L)"
        android:layout_below="@+id/odometer_edit"
        android:layout_alignParentStart="true"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fuel_unit_cost_edit"
        android:hint="Fuel Unit Cost (cents per L)"
        android:layout_below="@+id/fuel_amount_edit"
        android:layout_alignParentStart="true"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fuel_grade_edit"
        android:hint="Fuel Grade (Textual)"
        android:layout_below="@+id/fuel_unit_cost_edit"
        android:layout_alignParentStart="true"
        android:inputType="text"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save_edit"
        android:layout_below="@+id/fuel_grade_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:background="@android:color/holo_blue_light" />

</RelativeLayout>
